<section id="splash-image">
  <div class="container">
    <div class="row">
      <big class="span8" id="splash-message">start learning now</big>
      <div class="span4" id="splash-form-container">
        <form id="signup">
          <div>
            <h1>signup</h1>
            <button id="toggle-signup" type="button" class="toggle eduki-button-icon"></button>
            <hr />
            <input type="email" id="email" placeholder="email"/>
            <input type="password" id="password" placeholder="password"/>
            <button class="eduki-button-primary pull-right" type="button"><span>register</span></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section >
<div id="info" class="container">
  <div class="row">
    <div class="span4" id="info-courses">
      <h2>Take Courses</h2>
      <hr/ >
      <div class="info-icon" id="info-courses-icon">
      </div>
      <p class="info-description">
        Start taking courses with eduki, now! Explore the numerous courses that
        others have created for you!
      </p>
    </div>
    <div class="span4" id="info-create">
      <h2>Create Courses</h2>
      <hr/ >
      <div class="info-icon" id="info-create-icon">
      </div>
      <p class="info-description">
        Create material for yourself to help you study. Or create courses and
        share your knowledge with other eduki users!
      </p>
    </div>
    <div class="span4" id="info-dashboard">
      <h2>Dashboard</h2>
      <hr/ >
      <div class="info-icon" id="info-dashboard-icon">
      </div>
      <p class="info-description">
        See all the courses you are enrolled in and all the courses you have
        created. View the statistics about your course enrollments such as quiz
        scores.
      </p>
    </div>
  </div>
</div>
