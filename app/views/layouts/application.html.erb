<!DOCTYPE html>
<html>
  <head>
    <title>eduki</title>
    <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:200,700,400"  %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <%= link_to "eduki", {:controller => "static", :action => :index}, {:class => "brand"} %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown"  href="#">Courses</a>
            <ul class="dropdown-menu">
              <li role="presentation">
                <a role="menuitem" href="/#/courses">BROWSE</a>
              </li>
              <li role="presentation">
                <a role="menuitem" href="/#/courses/new">CREATE</a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
    <div id="main-content" class="container">
        <%= yield %>
    </div>
  </body>
</html>
